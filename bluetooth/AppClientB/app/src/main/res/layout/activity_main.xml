<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="client.com.br.appclientb.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txvRotuloCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-------Cliente Bluetooth--------" />

    <TextView
        android:id="@+id/txvRotuloServerConectado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Servidor Conectado:" />

    <TextView
        android:id="@+id/txvServerSelecionado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/btnConectarServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conectar Servidor" />

    <TextView
        android:id="@+id/txvRotuloMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensagem: " />

    <EditText
        android:id="@+id/edtMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/btnEnviarMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Mensagem" />

    <TextView
        android:id="@+id/txvRotuloRetorno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retorno Servidor: " />

    <TextView
        android:id="@+id/txvRetornoServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

</LinearLayout>
