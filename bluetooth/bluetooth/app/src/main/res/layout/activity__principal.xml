<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity__principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:backgroundTint="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.com.bluetooth.Activity_Principal">

    <Button
        android:id="@+id/btnAtivarBluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblStatus"
        android:layout_marginTop="19dp"
        android:layout_toLeftOf="@+id/lblStatus"
        android:layout_toStartOf="@+id/lblStatus"
        android:text="Ativar" />

    <Button
        android:id="@+id/btnListar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnAtivarBluetooth"
        android:layout_alignBottom="@+id/btnAtivarBluetooth"
        android:layout_alignEnd="@+id/lblStatus"
        android:layout_alignRight="@+id/lblStatus"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:text="Listar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:text="Status Bluetooth: "
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/lblStatus"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_toRightOf="@+id/textView2"
        android:text="Desativado"
        android:textColor="@android:color/white" />

    <ListView
        android:id="@+id/lvListaDispositivos"
        android:layout_width="400dp"
        android:layout_height="190dp"
        android:layout_alignEnd="@+id/lblStatus"
        android:layout_alignRight="@+id/lblStatus"
        android:layout_below="@+id/btnAtivarBluetooth"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/background_light" />

</RelativeLayout>
