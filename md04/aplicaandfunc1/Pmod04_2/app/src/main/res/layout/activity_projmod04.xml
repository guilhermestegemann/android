<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_projmod04"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.com.pmod04_2.Projmod04">

    <TextView
        android:text="Digite qualquer coisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="39dp"
        android:id="@+id/tvTituloTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/tvTituloTextView"
        android:layout_alignLeft="@+id/tvTituloTextView"
        android:layout_alignStart="@+id/tvTituloTextView"
        android:layout_marginTop="23dp"
        android:id="@+id/etNomeEditText"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:textColorLink="@color/colorPrimary" />

    <Button
        android:text="Clique Aqui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNomeEditText"
        android:layout_alignLeft="@+id/etNomeEditText"
        android:layout_alignStart="@+id/etNomeEditText"
        android:layout_marginTop="37dp"
        android:id="@+id/btAcionaButton" />

    <TextView
        android:text="Status:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btAcionaButton"
        android:layout_alignLeft="@+id/btAcionaButton"
        android:layout_alignStart="@+id/btAcionaButton"
        android:layout_marginTop="56dp"
        android:id="@+id/tvStatusTextView" />
</RelativeLayout>
